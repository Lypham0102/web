@model IEnumerable<mvcMobileStore.Models.DONDATHANG>

@{
    ViewBag.Title = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family: Arial">Đơn hàng</h2>

<p>
    @Html.ActionLink("Thêm đơn hàng mới", "Create")
</p>
<table class="table" style="border:2px outset black; height:250px; width: 1100px; margin-left: 100px; font-family: Arial ">
    <tr>
        <th style="font-family: Arial; margin-left: 20px; margin-right: 20px; border-top: 1px solid;">
            Thanh toán
        </th>
        <th style="font-family: Arial; margin-left: 20px; margin-right: 20px; border-top: 1px solid;">
            Tình trạng giao hàng
        </th>
        <th style="font-family: Arial; margin-left: 20px; margin-right: 20px; border-top: 1px solid;">
            Ngày đặt
        </th>
        <th style="font-family: Arial; margin-left: 20px; margin-right: 20px; border-top: 1px solid;">
            Ngày giao
        </th>
        <th style="font-family: Arial; margin-left: 20px; margin-right: 20px; border-top: 1px solid;">
            Mã khách hàng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="font-family: Arial">
        <td>
            @Html.DisplayFor(modelItem => item.Dathanhtoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tinhtranggiaohang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaydat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaygiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaKH)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaDonHang }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaDonHang }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaDonHang })
        </td>
    </tr>
}

</table>
