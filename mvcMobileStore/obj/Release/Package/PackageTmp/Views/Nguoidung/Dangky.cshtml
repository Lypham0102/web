
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<table align="center" style="font-family: Arial">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN KHÁCH HÀNG</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td style="font-family: Arial"> Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-family: Arial"> Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-family: Arial"> Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-family: Arial">Mật khẩu nhập lại: </td>
            <td>
                @Html.Password("Matkhaunhatrlai")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-family: Arial">CCCD/CMND: </td>
            <td>
                @Html.TextBox("CCCD")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-family: Arial">Địa chỉ: </td>
            <td>
                @Html.TextBox("Diachi")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-family: Arial">Điện thoại:</td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="font-family: Arial"> Ngày sinh :</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td style="font-family: Arial">
                <input type="Submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>
