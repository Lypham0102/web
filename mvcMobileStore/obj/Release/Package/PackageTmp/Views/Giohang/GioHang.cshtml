@using mvcMobileStore.Models;
@model List<GioHang>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center; font-family: Arial">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold; font-family: Arial">
        <td> Mã sách </td>
        <td> Tên sách </td>
        <td> Ảnh bìa </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold; font-family: Arial">
            <td> @item.iMaSP </td>
            <td> @item.sTenSP</td>
            <td><img src="~/Hinhsanpham/@item.sAnhbia " width="32%"></td>
            @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @iMaSP = item.iMaSP }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color: antiquewhite" />
                </td>
                <td class="dongia">@String.Format("{0:0,0}", item.dDongia) VNĐ</td>
                <td class="thanhtien">@String.Format("{0:0,0}", item.dThanhtien) VNĐ</td>
                <td> <a href="@Url.Action("Details", "MobileStore", new { id = item.iMaSP })"> Chỉ tiết </a></td>
                <td> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSP = item.iMaSP })</td>
                <td> <input type="submit" value="Cập Nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red; font-family: Arial">
        <td colspan="4"> Số lượng máy: @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ; font-family: Arial">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
        </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right; font-family: Arial">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "Dathang", "GioHang")
        </td>
    </tr>
</table>

