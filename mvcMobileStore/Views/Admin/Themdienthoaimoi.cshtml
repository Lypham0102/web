@model mvcMobileStore.Models.SanPham

@{
    ViewBag.Title = "Thêm điện thoại mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="font-family: Arial">Thêm điện thoại mới</h2>
@using (Html.BeginForm("Themdienthoaimoi", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Sản phẩm</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group" style="padding: 20px; margin-bottom: 20px; font-family: Arial">
                @Html.LabelFor(model => model.MANCC, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MANCC")
                </div>
            </div>

            <div class="form-group" style="padding: 20px; margin-bottom: 20px; font-family: Arial">
                @Html.LabelFor(model => model.MaNPP, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaNPP")
                </div>
            </div>
            <div class="form-group"style="padding: 20px; margin-bottom: 20px; font-family: Arial";>
                @Html.LabelFor(model => model.TENSP, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding: 20px; margin-bottom: 20px; font-family: Arial">
                @Html.LabelFor(model => model.GIABAN, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GIABAN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GIABAN, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="padding: 20px; margin-bottom: 20px; font-family: Arial">
                @Html.LabelFor(model => model.AnhSP, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="fileupload" />
                    @*thong bao trung"*@
                    @ViewBag.Thongbao
                </div>
            </div>

            <div class="form-group" style="padding: 20px; margin-bottom: 20px; font-family: Arial">
                @Html.LabelFor(model => model.MaDong, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaDong")
                </div>
            </div>

            <div class="form-group" style="width: 300px; font-family: Arial">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="THÊM MỚI" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div style="font-family: Arial">
        @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "Sanpham")
    </div>
